<!-- This is the add recipe page -->
<div class="container addRecipeForm">
    <form class="giveMeSpace">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputRecipeName">Recipe Name:</label>
                <input type="text" class="form-control" id="inputRecipeName" placeholder="Required!" />
            </div>
            <div class="form-group col-md-6">
                <label for="inputUserName">Created by:</label>
                <input type="text" class="form-control" id="inputUserName" placeholder="Required!" />
            </div>
        </div>

        <!-- This may have to be created dynamically so that you keep adding more ingredients -->
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="inputAmount">Amount:</label>
                <input type="text" class="form-control" id="inputAmount" placeholder="Enter a number" />
            </div>
            <div class="form-group col-md-2">
                <label for="inputAmount">Measurement:</label>
                <select id="inputMeasurement" class="form-control">
                    <option selected></option>
                    <option>Teaspoon(s)</option>
                    <option>Tablespoon(s)</option>
                    <option>Cup(s)</option>
                    <option>Ounce(s)</option>
                    <option>Pint(s)</option>
                    <option>Quart(s)</option>
                    <option>Gallon(s)</option>
                    <option>Pound(s)</option>
                </select>
            </div>
            <div class="form-group col-md-8">
                <label for="inputIngredient">Ingredient:</label>
                <input type="text" class="form-control" id="inputIngredient" placeholder="Enter 1 ingredient" />
            </div>
        </div>
        <button type="submit" id="addIngredient" class="btn noUglyBlue">Add Ingredient!</button>
        <br>
        <hr>
        <div class="showIngredients">
            <h5>Ingredients:</h5>

        </div>
        <br>
        <hr>
        <!-- This may have to be created dynamically so that you keep adding more ingredients -->

        <div class="form-group">
            <label for="inputInstructions">Instructions:</label>
            <input type="text" class="form-control" id="inputInstructions" />
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="inputCook">Cook Time:</label>
                <input type="text" class="form-control" id="inputCook" placeholder="Required:Must be a number." />
            </div>

            <div class="form-group col-md-2">
                <label for="inputPrep">Prep Time:</label>
                <input type="text" class="form-control" id="inputPrep" />
            </div>
        </div>

        <button type="submit" id="recipe-form" class="btn noUglyBlue">
            Save Recipe!
        </button>
    </form>
</div>

<div class="modal fade" id="showMeTheModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalCenterTitle">You added a Recipe!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
    
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Add Another</button>
            </div>
        </div>
    </div>
</div>
